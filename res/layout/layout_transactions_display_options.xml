<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <CheckBox
        android:id="@+id/checkBox_incomes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/incomes" />

    <CheckBox
        android:id="@+id/checkBox_expenditures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBox_incomes"
        android:layout_below="@+id/checkBox_incomes"
        android:text="@string/expenditures" />

    <LinearLayout
        android:id="@+id/expendituresLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBox_expenditures"
        android:layout_below="@+id/checkBox_expenditures"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox_bankTransactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBox_expenditures"
        android:layout_below="@+id/expendituresLayout"
        android:layout_marginTop="20dp"
        android:text="@string/bankTransactions" />

    <LinearLayout
        android:id="@+id/bankTransactionsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/expendituresLayout"
        android:layout_below="@+id/checkBox_bankTransactions"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>
