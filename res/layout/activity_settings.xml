<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/krishna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
	android:layout_centerHorizontal="true"
        android:text="@string/krishna" />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/krishna"
        android:layout_marginTop="20dp" >
        
        <LinearLayout
            android:id = "@+id/parentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

    	    <com.chaturvedi.financemanager.customviews.SettingsLayout
    	        android:id="@+id/splashDuration"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" >
    	    </com.chaturvedi.financemanager.customviews.SettingsLayout>

    	    <com.chaturvedi.financemanager.customviews.SettingsLayout
    	        android:id="@+id/bankSms"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" >
    	    </com.chaturvedi.financemanager.customviews.SettingsLayout>

    	    <com.chaturvedi.financemanager.customviews.SettingsLayout
    	        android:id="@+id/currencySymbols"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" >
    	    </com.chaturvedi.financemanager.customviews.SettingsLayout>

    	    <com.chaturvedi.financemanager.customviews.SettingsLayout
    	        android:id="@+id/transactionsDisplayInterval"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" >
    	    </com.chaturvedi.financemanager.customviews.SettingsLayout>

    	    <com.chaturvedi.financemanager.customviews.SettingsLayout
    	        android:id="@+id/autoBackupRestore"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" >
    	    </com.chaturvedi.financemanager.customviews.SettingsLayout>
    	</LinearLayout>
    </ScrollView>

</RelativeLayout>
