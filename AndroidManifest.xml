                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chaturvedi.financemanager.EditActivity" />
        </activity>
        <activity android:name="com.chaturvedi.financemanager.EditExpenditureTypesActivity"> </activity>
        <activity 
            android:name="com.chaturvedi.financemanager.StatisticsActivity"
            android:label="@string/label_statistics"
            android:parentActivityName="com.chaturvedi.financemanager.SummaryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
