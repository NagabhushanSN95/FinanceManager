            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chaturvedi.financemanager.EditActivity" />
        </activity>
        <activity 
            android:name="com.chaturvedi.financemanager.EditBanksActivity"
            android:label="@string/label_edit"
