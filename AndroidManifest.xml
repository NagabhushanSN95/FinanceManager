            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chaturvedi.financemanager.SummaryActivity" />
        </activity>
        <activity 
            android:name="com.chaturvedi.financemanager.EditWalletBalanceActivity"
            android:label="@string/label_edit"
