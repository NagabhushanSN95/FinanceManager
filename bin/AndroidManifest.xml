<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chaturvedi.financemanager"
    android:versionCode="62"
    android:versionName="3.0.6" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.chaturvedi.financemanager.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.chaturvedi.financemanager.BanksSetupActivity"> </activity>
        <activity android:name="com.chaturvedi.financemanager.ExpenditureSetupActivity"> </activity>
        <activity android:name="com.chaturvedi.financemanager.SummaryActivity" android:label="@string/app_name" ></activity>
        <activity android:name="com.chaturvedi.financemanager.TransactionsActivity"></activity>
        <activity android:name="com.chaturvedi.financemanager.EditBanksActivity"> </activity>
        <activity android:name="com.chaturvedi.financemanager.EditExpenditureTypesActivity"> </activity>
        <activity android:name="com.chaturvedi.financemanager.StatisticsActivity"> </activity>
        <activity android:name="com.chaturvedi.financemanager.SettingsActivity"></activity>
        <activity android:name="com.chaturvedi.financemanager.HelpActivity"></activity>
        <activity android:name="com.chaturvedi.financemanager.AboutActivity"></activity>
        <activity android:name="com.chaturvedi.financemanager.ExportActivity"></activity>
        <activity android:name="com.chaturvedi.financemanager.ExtrasActivity"></activity>
        <receiver android:name="com.chaturvedi.financemanager.SmsReceiver" >
            <intent-filter android:priority="100" >
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
		</receiver>
    </application>

</manifest>
