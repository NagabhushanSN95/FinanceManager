<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chaturvedi.expenditurelist"
    android:versionCode="037"
    android:versionName="2.2.5" android:installLocation="auto">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.chaturvedi.expenditurelist.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.chaturvedi.expenditurelist.BanksSetupActivity"> </activity>
        <activity android:name="com.chaturvedi.expenditurelist.ExpenditureSetupActivity"> </activity>
        <activity android:name="com.chaturvedi.expenditurelist.SummaryActivity" android:label="@string/app_name" ></activity>
        <activity android:name="com.chaturvedi.expenditurelist.DetailsActivity"></activity>
        <activity android:name="com.chaturvedi.expenditurelist.EditBanksActivity"> </activity>
        <activity android:name="com.chaturvedi.expenditurelist.EditExpenditureTypesActivity"> </activity>
        <activity android:name="com.chaturvedi.expenditurelist.StatisticsActivity"> </activity>
        <activity android:name="com.chaturvedi.expenditurelist.SettingsActivity"></activity>
        <activity android:name="com.chaturvedi.expenditurelist.HelpActivity"></activity>
        <activity android:name="com.chaturvedi.expenditurelist.AboutActivity"></activity>
        <activity android:name="com.chaturvedi.expenditurelist.ExportActivity"></activity>
        <receiver android:name="com.chaturvedi.expenditurelist.SmsReceiver" >
            <intent-filter android:priority="100" >
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
	</receiver>
    </application>

</manifest>
