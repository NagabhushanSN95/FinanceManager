<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/label_walletName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="@string/label_bankName" />

    <TextView
        android:id="@+id/label_walletBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/label_walletName"
        android:layout_alignStart="@+id/label_walletName"
        android:layout_below="@+id/label_walletName"
        android:layout_marginTop="10dp"
        android:text="@string/label_bankBalance" />

    <TextView
        android:id="@+id/textView_colon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/label_walletName"
        android:layout_alignBottom="@+id/label_walletName"
        android:layout_toRightOf="@+id/label_walletName"
        android:layout_toEndOf="@+id/label_walletName"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/colon" />

    <TextView
        android:id="@+id/textView_colon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/label_walletBalance"
        android:layout_alignBottom="@+id/label_walletBalance"
        android:layout_toRightOf="@+id/label_walletBalance"
        android:layout_toEndOf="@+id/label_walletBalance"
        android:layout_alignLeft="@+id/textView_colon1"
        android:layout_alignStart="@+id/textView_colon1"
        android:text="@string/colon" />

    <TextView
        android:id="@+id/value_walletName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/label_walletName"
        android:layout_alignBottom="@+id/label_walletName"
        android:layout_toRightOf="@+id/label_walletName"
        android:layout_toEndOf="@+id/label_walletName"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/value_walletBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/label_walletBalance"
        android:layout_alignBottom="@+id/label_walletBalance"
        android:layout_alignLeft="@+id/label_walletBalance"
        android:layout_alignStart="@+id/label_walletBalance" />

</RelativeLayout>
