<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#CCCCCC">

	<ImageButton
		android:id="@+id/imageButton_credit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/credit"
		android:background="#00000000"
		android:contentDescription="@string/credit"
		android:layout_gravity="center_vertical"/>

	<ImageButton
		android:id="@+id/imageButton_debit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/debit"
		android:background="#00000000"
		android:contentDescription="@string/debit"
		android:layout_gravity="center_vertical" />

	<ImageButton
		android:id="@+id/imageButton_transfer"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/transfer"
		android:background="#00000000"
		android:contentDescription="@string/transfer"
		android:layout_gravity="center_vertical" />

</LinearLayout>