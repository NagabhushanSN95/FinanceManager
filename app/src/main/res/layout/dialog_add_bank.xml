<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.chaturvedi.customviews.MyAutoCompleteTextView
        android:id="@+id/bankName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_bankName"
        android:inputType="textCapWords"
        android:textColor="#000000"
        android:ems="10" />
    
    <EditText
        android:id="@+id/walletAccNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_bankAccNo"
        android:inputType="textVisiblePassword"
        android:ems="10" />
    
    <EditText
        android:id="@+id/bankBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_bankBalance"
        android:inputType="numberDecimal"
        android:ems="10" />
    
    <com.chaturvedi.customviews.MyAutoCompleteTextView
        android:id="@+id/bankSmsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_bankSmsName"
        android:inputType="textCapWords"
        android:textColor="#000000"
        android:ems="10" />
</LinearLayout>
