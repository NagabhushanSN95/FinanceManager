<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/krishna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/krishna" />

    <TextView
        android:id="@+id/textView_walletBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/krishna"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />
    
    <Button
        android:id="@+id/button_editWalletBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_walletBalance"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/editWallets" />"

</RelativeLayout>
